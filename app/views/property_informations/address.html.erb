<%= render 'layouts/propertyheader' %>
<div class="add-page">
  <div class="row">
  <%= form_for(@propertyinformations) do |f| %>
    <div class="col-md-8">
      <h3>Property Address</h3>
      <div class="form-group">
        <%= f.label :address, "Property Address" %>
        <%= f.text_field :address, class: "form-control" %>
        <p>Your property's address.</p>
      </div>
      <div class="form-group">
        <%= f.label :state, "State" %>
        <%= f.text_field :state, class: "form-control" %>
        <p>Your property's state.</p>
      </div>
      
      <div class="form-group">
        <%= f.label :city, "City" %>
        <%= f.text_field :city, class: "form-control" %>
        <p>Your property's city.</p>
      </div>
      <div class="form-group">
        <%= f.label :zipcode, "Zipcode" %>
        <%= f.text_field :zipcode, class: "form-control" %>
        <p>Your property's zipcode.</p>
      </div>
      
      <div class="admin-bar" id="quick-access" style="bottom: 0px;">
        <div class="admin-bar-inner">
          <%= f.submit "Save Settings", class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
